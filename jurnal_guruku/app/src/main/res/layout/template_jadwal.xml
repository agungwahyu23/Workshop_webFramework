<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    app:cardElevation="5dp"
    android:id="@+id/cardjadwal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/hari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hari"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/darkGrey" />

        <TextView
            android:id="@+id/nama_mapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Mapel"
            android:textSize="15sp"
            android:textColor="@color/darkGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home_707070"/>
            <TextView
                android:id="@+id/nama_kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kelas"
                android:layout_marginHorizontal="8dp"
                android:textSize="14sp"
                android:textColor="@color/darkGrey" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_timer_707070"/>
            <TextView
                android:id="@+id/jam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Jam"
                android:layout_marginHorizontal="8dp"
                android:textSize="14sp"
                android:textColor="@color/darkGrey" />

            <LinearLayout
                android:id="@+id/panelstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="end"
                android:layout_gravity="end"
                android:paddingVertical="2dp"
                android:paddingHorizontal="7dp"
                >
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="12sp"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>