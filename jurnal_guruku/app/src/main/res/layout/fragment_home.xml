<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="#3F51B5"
        app:cardCornerRadius="22dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textColor="#FFF"
                    android:textSize="9pt"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Agung"
                    android:textColor="#FFF"
                    android:textSize="9pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/ic_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="110dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_mengajar" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaji lembur"
                    android:textColor="#FFF"
                    android:textSize="6pt"/>
                <TextView
                    android:id="@+id/upah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:textColor="#FFF"
                    android:text="Rp."
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="39dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_jadwal"
                android:layout_marginLeft="50dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun Ajaran Aktif"
                    android:textColor="#FFF"
                    android:textSize="6pt"/>
                <TextView
                    android:id="@+id/tahun_ajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="2020/2010"
                    android:textStyle="bold"
                    android:textColor="#Fff"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_mengajar_aktif"
        android:paddingHorizontal="10dp"
        android:textSize="17sp"
        android:layout_marginVertical="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:id="@+id/tmpdatasatu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jadwal_hari_ini"
        android:paddingHorizontal="10dp"
        android:textSize="17sp"
        android:layout_marginVertical="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/tmpdatadua"/>


</LinearLayout>